{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/api/*"],
  "routes": [
    {
      "pattern": "/api/verify-turnstile",
      "script": "api/verify-turnstile.js"
    },
    {
      "pattern": "/api/check-ip",
      "script": "api/check-ip.js"
    },
    {
      "pattern": "/api/save-record",
      "script": "api/save-record.js"
    },
    {
      "pattern": "/*",
      "serve": "/index.html",
      "script": "index.js"
    }
  ]
} 